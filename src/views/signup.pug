extends layout
block content
  .signUpContainer
    .signUpHolder
      h2.fsTitle Create Your Account
      div.registerContainer
        form.signUpForm(action='/newUser' method='post')
          .signUpName
            label(for="name") Username:
            input.genericInput(type='text' id="name" name='userFieldInput' required)
            p=userError
          .signUpPass
            label(for="pass") Password:
            input.genericInput(type='password' id="pass" name='passFieldInput' required)
            p=passError
          br
          div.buttonContainer
            .homePageDiv
              button.returnBtn(type="button")
                span Return
            .registerDiv
              button.registerBtn
                img(src='./buttons_ico/snowman_ico.png')
                span  Register
  script.
    function init() {
      $('.returnBtn').click( function() {
        console.log('huhu');
        location.href="/";
      });
    }
    init();
