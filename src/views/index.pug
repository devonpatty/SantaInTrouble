extends layout.pug
block content
  .header
    if loggedIn
      span
        p Welcome #{username}
      form.logOutForm(action='/logout' method='get')
        button.logOutBtn
          span Logout
    else
      form.loginForm(action='/login' method='post')
        div
          input.genericInput.userName(type='text' name='userFieldInput' placeholder="Username")
        div
          input.genericInput.passWord(type='password' name='passFieldInput' placeholder="Password")
        div
          button.loginBtn
            img(src='./buttons_ico/santa_claus_ico.png')
            span  Login
      form.fakeForm(action='/signup' method='get')
        button.reBtn
          img(src='./buttons_ico/snowman_ico.png')
          span  Register
  section.mainSection
    .leftDiv
      h3 About the game
      p This is a christmas game designed for everybody and should take only 30-40 minutes to complete the game.
      h3 Controls
      .controlsInfo
        .infoLeft
          div
            img(src='./buttons_ico/w_btn.png')
            p  move Up
          div
            img(src='./buttons_ico/s_btn.png')
            p  move Down
          div
            img(src='./buttons_ico/a_btn.png')
            p  move Left
          div
            img(src='./buttons_ico/d_btn.png')
            p  move Right
        .infoRight
          div
            img(src='./buttons_ico/mouse_select_left.png')
            p  click to Shoot
          div
            img(src='./buttons_ico/p_btn.png')
            p  Pause
          div
            img(src='./buttons_ico/t_btn.png')
            p  Start Game
          div
            img(src='./buttons_ico/k_btn.png')
            p  Reset
      if loggedIn
      else
        h3 Register for more fun!!!
        p If you register you can save your game online and play anywhere. Compete against other player.
    .gameCanvas
      canvas#myCanvas(width='800', height='600', style='border: 1px solid black;', tabindex='1')
    include ranking.pug
